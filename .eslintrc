{
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint"],
	"extends": [
		"plugin:@typescript-eslint/recommended"
	],
	"env": {
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"@typescript-eslint/no-explicit-any": "off",
		"semi": "error"
	},
	"ignorePatterns": ["jest.config.integration.js", "jest.config.unit.js", "node_modules/", "test/integration/test-project/node_modules/"]
}